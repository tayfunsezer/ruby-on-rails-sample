<%= link_to 'New article', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
<% @articles.each do |item|%>
<tr>
	<td><%=item.title%></td>
	<td><%=item.text%></td>
	<td><%= link_to 'Detail', article_path(item) %></td>
	<td><%= link_to 'Edit', edit_article_path(item) %></td>
	 <td><%= link_to 'Destroy', article_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
</tr>
<%end%>
</table>